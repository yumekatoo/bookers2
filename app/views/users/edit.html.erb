<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %> error prohibited this obj from being saved:
 <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
  <label for="inputImage">ProfileImage</label>
 <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
  <label for="inputIntroduction">Introduction</label>
  <p><%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%></p>
  <%= f.submit "Update User", class: "btn btn-success" %>
<% end %>
</div>
</div>
</div>