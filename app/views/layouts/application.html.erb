<!DOCTYPE html>
<html>
  
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
   <script src="https://kit.fontawesome.com/1080a63ab8.js" crossorigin="anonymous"></script>
   <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">

    <%= link_to "Bookers", root_path, class: 'nav-link text-white'%>
   <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
    <li class="nav-item">
    
     <%= link_to user_path(current_user.id), class: 'nav-link text-white' do%>
     <i class="fa-solid fa-home"></i>Home
     <!-- <i class="fa-solid fa-home"></i> Font Awesome fontawesome.com -->
     <% end %>
    </li>
    <li class="nav-item">
    <%= link_to users_path, class: 'nav-link text-white' do %>
    <i class="fa-solid fa-users"></i>Users
     <% end %>
    <!-- <i class="fa-solid fa-users"></i> Font Awesome fontawesome.com -->
    </li>
    <li class="nav-item">
      <!-- <i class="fa-solid fa-book-open"></i> Font Awesome fontawesome.com -->
    <%= link_to books_path, class: 'nav-link text-white' do %>
    <i class="fas fa-book-open"></i>Books
    <% end %>
    </li>
    <li class="nav-item">
    <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-white' do %>
    <i class="fas fa-sign-out-alt"></i>Log out
    <% end %>
    <!-- <i class="fa-solid fa-sign-out-alt"></i> Font Awesome fontawesome.com -->
    </li>
    <% else %>
    <li class="nav-item">
     <%= link_to root_path, class: 'nav-link text-white' do %>
     <i class="fa-solid fa-home"></i>Home
     <% end %>
    </li>
    <li class="nav-item">
      <%= link_to about_path, class: 'nav-link text-white' do %>
      <i class="fa-solid fa-link"></i>About
      <% end %>
      <!-- <i class="fa-solid fa-link"></i> Font Awesome fontawesome.com -->
    </li>
    <li class="nav-item">
        <%= link_to new_user_registration_path, class: 'nav-link text-white' do %>
        <i class="fas fa-user-plus"></i>Sign up
        <% end %>
        </li>
    <li class="nav-item">
        <%= link_to new_user_session_path, class: 'nav-link text-white' do %>
        <i class="fas fa-sign-in-alt"></i>Log in
        <% end %>
        <!-- <i class="fa-solid fa-sign-in-alt"></i> Font Awesome fontawesome.com -->
      </li>
    <% end %>
    </ul>
      </div>
    </div>
  </nav>
  </header>
  
<div>
  <%= flash[:notice] %>
</div>

    
    <%= yield %>
    <footer>
      <div class = "cotainer mt-5">
        <div class = "row">
          <div class = "mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
      </footer>
    
    
  </body>
</html>
